{
  "name": "yab",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mjolnirjs/yab"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mjolnirjs/yab/issues"
  },
